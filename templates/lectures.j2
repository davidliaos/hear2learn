{% extends "dashboard.j2" %}

{% block right %}
<div class="container mx-auto">
    <h1 class="text-xl font-bold mb-4">Lectures</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {% for lecture in lectures %}
        <!-- Lecture Item -->
        <a href="/view-lecture/{{lecture.id}}">
            <div class="bg-white rounded-lg shadow-md p-6">
                <input type="image" src="/static/images/delete.png" style="width: 15px;" class="float-right"/>
                <h2 class="font-semibold text-lg">{{ lecture.title }}</h2>
                <p class="text-gray-600 mt-2">{{ lecture.description }}</p>
                <p class="text-sm mt-4"><strong>Date:</strong> {{ lecture.datetime.strftime('%B %d, %Y') }}</p>
                <p class="text-sm"><strong>Time:</strong> {{ lecture.datetime.strftime('%I:%M %p') }}</p>
            </div>
        </a>
        {% endfor %}
    </div>
</div>
{% endblock %}